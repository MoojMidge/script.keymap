<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.keymap" name="Keymap Editor" version="1.1.0+matrix.1" provider-name="takoi,pkscout">
	<requires>
		<import addon="xbmc.python" version="3.0.0"/>
		<import addon="script.module.kodi-six" version="0.1.3.1" />
	</requires>
	<extension point="xbmc.python.script" library="default.py"/>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_gb">An editor for keymap files</summary>
		<description lang="en_gb">Keymap Editor is a GUI for configuring mappings for remotes, keyboard and other inputs supported by xbmc. Note: existing user defined key mappings will be removed.</description>
